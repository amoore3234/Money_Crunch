<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moneycrunch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_crunch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_crunch_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyCrunch">
        <activity android:name=".CrunchSplashScreen">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
        </activity>
        <activity
            android:name=".CreditCardLoanCalculatorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AutoLoanCalculatorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>